{
  "name": "apps",
  "version": "1.0.0",
  "description": "Backend for Express MVC Scaffold.",
  "main": "index.js",
  "repository": "git@github.com:kojiyamauchi/express-mvc-scaffold.git",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/express-session": "^1.17.3",
    "@types/http-errors": "^1.8.0",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.6.0",
    "@types/puppeteer": "^5.4.3",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "browser-sync": "^2.26.14",
    "cookie-parser": "^1.4.5",
    "crypto": "^1.0.1",
    "dotenv": "^10.0.0",
    "ejs": "^3.1.6",
    "eslint": "^7.27.0",
    "eslint-config-import": "^0.13.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "express-session": "^1.17.2",
    "http-errors": "^1.8.0",
    "jest-puppeteer": "^5.0.3",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "nodemon": "^2.0.7",
    "npm-check-updates": "^11.5.13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.0",
    "puppeteer": "9.1.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/resource/$1"
    },
    "transform": {
      "^.+\\.(ts)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    },
    "testMatch": [
      "**/resource/tests/**/*.test.+(ts|js)"
    ],
    "preset": "jest-puppeteer"
  },
  "scripts": {
    "setup:browser": "wait-on https://localhost:3000 && browser-sync start --config bs-config.js",
    "setup:dev": "nodemon",
    "dev": "npm-run-all -p setup:browser setup:dev",
    "build": "tsc && cp -r resource/views build",
    "serve": "NODE_ENV=production node build/serve.js",
    "serve:local": "npm-run-all -p setup:browser serve",
    "clean": "rimraf build/*",
    "jest": "jest --passWithNoTests",
    "lint": "eslint 'resource/**/*.{ts,js}' --max-warnings 0",
    "lint:fix": "eslint --fix 'resource/**/*.{ts,js}' --max-warnings 0"
  }
}
