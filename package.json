{
  "name": "express-mvc-scaffold",
  "version": "1.0.0",
  "description": "This is Express MVC Scaffold.",
  "main": "index.js",
  "repository": "git@github.com:kojiyamauchi/express-mvc-scaffold.git",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "apps",
      "static"
    ],
    "nohoist": []
  },
  "devDependencies": {
    "husky": "6.0.0",
    "lint-staged": "^11.0.0",
    "npm-check-updates": "^11.5.13",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "prepare": "husky install",
    "apps:dev": "yarn workspace apps dev",
    "apps:build": "yarn workspace apps build",
    "apps:clean": "yarn workspace apps clean",
    "apps:lint": "yarn workspace apps lint",
    "apps:jest": "yarn workspace apps jest",
    "static:dev": "yarn workspace static dev",
    "static:build": "yarn workspace static build",
    "static:clean": "yarn workspace static clean",
    "static:lint": "yarn workspace static lint",
    "static:stylelint": "yarn workspace static stylelint",
    "static:jest": "yarn workspace static jest",
    "dev": "npm-run-all -p apps:dev static:dev",
    "build": "npm-run-all -p apps:build static:build",
    "clean": "npm-run-all -p apps:clean static:clean",
    "lint": "npm-run-all -p apps:lint static:lint",
    "stylelint": "npm-run-all -p static:stylelint",
    "jest": "npm-run-all -p apps:jest static:jest",
    "serve": "yarn workspace apps serve",
    "serve:local": "yarn workspace apps serve:local",
    "module-update": "yarn upgrade-interactive --latest"
  }
}
